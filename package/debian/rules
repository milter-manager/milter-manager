#!/usr/bin/make -f
# -*- makefile-gmake -*-
#
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1
# This has to be exported to make some magic below work.
export DH_OPTIONS
# search rbgobject.h
export CFLAGS += -I$(ruby -rrbconfig -e 'print RbConfig::CONFIG["vendorarchdir"]')
# Workaround ev.h path
export CFLAGS += -I/usr/include
# support MULTIARCH
export DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

%:
	dh $@ --with autoreconf

override_dh_autoreconf:
	dh_autoreconf ./autogen.sh -- --no-update

override_dh_auto_configure:
	dh_auto_configure --													\
		--with-default-effective-user=milter-manager						\
		--with-default-effective-group=mail								\
		--with-default-socket-group=mail									\
		--with-default-pid-file=/run/milter-manager/milter-manager.pid	\
		--with-default-connection-spec=unix:/run/milter-manager/milter-manager.sock \
		--enable-ruby-milter=$$(ruby -rrbconfig -e 'print RbConfig::CONFIG["vendordir"]')


# disable 'make check'.
override_dh_auto_test:

override_dh_install:
	find $(CURDIR)/debian/tmp/usr/lib/ -name *.la -delete
	dh_install

override_dh_installchangelogs:
	dh_installchangelogs --all -k NEWS

override_dh_installdocs:
	dh_installdocs --all NEWS.ja README.ja TODO

override_dh_auto_clean:
	dh_auto_clean
	-find $(CURDIR) -name Makefile.in -delete
	-find $(CURDIR)/milter/client -name milter-client-enum-types.c -delete
	-find $(CURDIR)/milter/client -name milter-client-enum-types.h -delete
	-find $(CURDIR)/milter/client -name stamp-milter-client-enum-types-c -delete
	-find $(CURDIR)/milter/client -name stamp-milter-client-enum-types-h -delete
	-find $(CURDIR)/milter/manager -name milter-manager-enum-types.c -delete
	-find $(CURDIR)/milter/manager -name milter-manager-enum-types.h -delete
	-find $(CURDIR)/milter/manager -name stamp-milter-manager-enum-types-c -delete
	-find $(CURDIR)/milter/manager -name stamp-milter-manager-enum-types-h -delete
	-find $(CURDIR)/milter/server -name milter-server-enum-types.c -delete
	-find $(CURDIR)/milter/server -name milter-server-enum-types.h -delete
	-find $(CURDIR)/milter/server -name stamp-milter-server-enum-types-c -delete
	-find $(CURDIR)/milter/server -name stamp-milter-server-enum-types-h -delete
	-find $(CURDIR)/test/lib -name milter-test-enum-types.c -delete
	-find $(CURDIR)/test/lib -name milter-test-enum-types.h -delete
	-find $(CURDIR)/test/lib -name stamp-milter-test-enum-types-c -delete
	-find $(CURDIR)/test/lib -name stamp-milter-test-enum-types-h -delete
	-rm -fr $(CURDIR)/doc/reference/ja/*.xml
	-rm -fr $(CURDIR)/doc/reference/ja/html.stamp
	-rm -fr $(CURDIR)/doc/reference/ja/xml
	-rm -fr $(CURDIR)/config/po
